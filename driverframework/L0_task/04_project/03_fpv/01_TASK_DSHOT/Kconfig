menuconfig PROJECT_MINIFLY_TASK_DSHOT_EN
    bool "ENABLE: PROJECT_MINIFLY_TASK_DSHOT_EN"
    default n
    help
        Enable DShot task which periodically publishes motor RPM command via uMCN
        and writes mapped values to DShot device.
    if PROJECT_MINIFLY_TASK_DSHOT_EN
        config PROJECT_MINIFLY_TASK_DSHOT_TIMER_HZ
            int "DShot task timer frequency (Hz)"
            default 500
            help
                Periodic frequency of DShot task. Task waits timer event, then
                copies the latest uMCN command and writes to DShot device.
        config PROJECT_MINIFLY_TASK_DSHOT_DEBUG_PIN_EN
            bool "ENABLE: PROJECT_MINIFLY_TASK_DSHOT_DEBUG_PIN_EN"
            default n
            help
                Debug pin for DShot task.
        
        config PROJECT_MINIFLY_TASK_DSHOT_ATKP_LOG_EN
            bool "ENABLE: PROJECT_MINIFLY_TASK_DSHOT_ATKP_LOG_EN"
            default n
            help
                Enable ATKP logging for DShot motor data.
        
        config PROJECT_MINIFLY_TASK_DSHOT_ATKP_LOG_GROUP
            int "ATKP log group ID for motor data"
            default 1
            depends on PROJECT_MINIFLY_TASK_DSHOT_ATKP_LOG_EN
            help
                Group ID used for sending motor data via ATKP protocol.
    endif

