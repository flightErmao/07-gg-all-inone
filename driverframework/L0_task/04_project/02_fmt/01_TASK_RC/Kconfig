menuconfig PROJECT_FMT_TASK01_RC_EN
    bool "ENABLE: PROJECT_FMT_TASK01_RC_EN"
    default n
    # select RC_USING_SBUS
    help
        Enable RC test task that reads RC receiver data and outputs channel values.

    if PROJECT_FMT_TASK01_RC_EN
        config PROJECT_FMT_TASK01_RC_DEVICE_DEFAULT
            string "RC device name"
            default "sbus"
            help
                The RC device name to use (e.g. sbus, crsf).

        config PROJECT_FMT_TASK01_RC_ATKP_LOG_EN
            bool "ENABLE: PROJECT_FMT_TASK01_RC_ATKP_LOG_EN"
            default n
            help
                Enable ATKP log for RC data.

        config PROJECT_FMT_TASK01_RC_DEADZONE_PERCENT
            int "RC deadzone percent (x100, e.g. 5 = 0.05 = 5%)"
            default 5
            range 0 50
            help
                RC stick deadzone percentage (multiplied by 100).
                Default: 5 (0.05 = 5% deadzone)
                Range: 0-50 (0% to 50%)
                This creates a dead zone around the center position to ignore small stick movements.

    endif