menuconfig PROJECT_MINIFLY_TASK06_RC_EN
    bool "ENABLE: PROJECT_MINIFLY_TASK06_RC_EN"
    default n
    select PROJECT_MINIFLY_TASK04_DISTRIBUTE_EN
    select PROJECT_MINIFLY_TASK04_DISTRIBUTE_REMOTE_EN
    help
        Enable RC control task that periodically publishes pilot command data via MCN.
        
if PROJECT_MINIFLY_TASK06_RC_EN
    config PROJECT_MINIFLY_TASK06_RC_DEBUGPIN_EN
        bool "ENABLE: PROJECT_MINIFLY_TASK06_RC_DEBUGPIN_EN"
        default n
        help
            Enable debug output for RC task.
            
    config PROJECT_MINIFLY_TASK06_RC_FAILSAFE_TIMEOUT_MS
        int "RC failsafe timeout in milliseconds"
        default 2000
        range 1000 10000
        help
            Timeout value in milliseconds for RC failsafe protection.
            If RC data is older than this value, the system will disarm and zero all axes.
endif 