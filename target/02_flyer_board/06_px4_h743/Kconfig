mainmenu "RT-Thread Configuration"

# Define path variables (relative to current BSP directory)
BSP_DIR := .
PROJECT_ROOT := ../../..
RTT_DIR := $(PROJECT_ROOT)/kernel/rtthread
PKGS_DIR := $(PROJECT_ROOT)/tools/env_win/packages/packages
libraries_path_prefix := $(RTT_DIR)/bsp/stm32/libraries
driverframework_path := $(PROJECT_ROOT)/driverframework

config SOC_STM32H743XI
    bool
    select SOC_SERIES_STM32H7
    select RT_USING_COMPONENTS_INIT
    select RT_USING_USER_MAIN
    default y

source "$(RTT_DIR)/Kconfig"
osource "$(PKGS_DIR)/Kconfig"
rsource "$(libraries_path_prefix)/Kconfig"
source "$(driverframework_path)/Kconfig"
