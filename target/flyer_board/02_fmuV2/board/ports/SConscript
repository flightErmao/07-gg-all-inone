import os
from building import *

cwd  = GetCurrentDir()
path =  [cwd]
src  = Glob('./*.c')

if GetDepend(['BSP_USING_SDCARD']):
    src += Glob('sdcard_port.c')

CPPDEFINES = ['STM32F427xx']
group = DefineGroup('Drivers', src, depend = [''], CPPPATH = path, CPPDEFINES = CPPDEFINES)

Return('group')
